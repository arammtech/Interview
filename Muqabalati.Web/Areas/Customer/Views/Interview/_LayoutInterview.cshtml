@using BookStore.Utilties.HTMLHelpers
@using Muqabalati.Utilities.Identity
<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Muqabalati.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/interview-ai.css" asp-append-version="true" />

    <partial name="_StyleLinksPartial"></partial>


